/**
 * Implements hook_menu().
 */
function vih_short_course_menu() {
  $items['node/%node/signup'] = array(
    'title callback' => 'node_page_title',
    'title arguments' => array(1),
    // The page callback also invokes drupal_set_title() in case
    // the menu router's title is overridden by a menu link.
    'page callback' => 'vih_short_course_node_page_view',
    'page arguments' => array(1),
    'access callback' => 'node_access',
    'access arguments' => array('view', 1),
  );

  return $items;
}

/**
 * Implements hook_entity_info_alter().
 *
 * Add an 'Signup' view mode for nodes, similar to RSS view mode.
 */
function vih_short_course_entity_info_alter(&$info) {
  $info['node']['view modes'] += array(
    'vih_signup' => array(
      'label' => t('Signup'),
      'custom settings' => TRUE,
    ),
  );
}


function vih_short_course_node_page_view($node) {
  return node_view_multiple(array($node->nid => $node), 'vih_signup');
}

/**
 * Implements hook_node_view().
 */
function vih_short_course_node_view($node, $view_mode, $langcode) {
  if ($view_mode == 'full') {
    $node->content['my_additional_field'] = array(
      '#markup' => l('Signup NOW!', 'node/' . $node->nid . '/signup'),
      '#weight' => 10,
    );
  }
}

/**
